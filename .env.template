# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=sensareal_db
DB_USER=sensareal_user
DB_PASSWORD=sensareal_password

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
